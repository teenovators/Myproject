<%- include ("../partials/header") %>
    <div class="row" style="margin-top:10rem;">
        <h1 style="text-align: center">Create a New Features</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/tenovaters/features" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  heading:  <input class="form-control" type="text" name="heading" placeholder="heading">
                </div>
                <div class="form-group">
                   imageUrl: <input class="form-control" type="file" name="image" placeholder="image url" multiple>
                </div>
                <div class="form-group">
                   description: <input class="form-control" type="text" name="maindesc" placeholder="desc of 100 words">
                </div>
                <div class="form-group">
                   description: <input class="form-control" type="text" name="subdesc" placeholder="desc of minimum 1000 words">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/tenovaters/features">Go Back</a>
        </div>
    </div>


<%- include ("../partials/footer") %>