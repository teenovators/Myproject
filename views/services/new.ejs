<%- include ("../partials/header") %>
    <div class="row" style="margin-top:10rem;">
        <h1 style="text-align: center">Create a New Services</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/tenovaters/services" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="heading" placeholder="heading">
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" name="image" placeholder="image url" multiple>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="maindesc" placeholder="maindesc 200 words">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="subdesc" placeholder="description of minimum 1000 words">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/tenovaters">Go Back</a>
        </div>
    </div>


<%- include ("../partials/footer") %>